---
import Section from '@/components/Section.astro';
import { skills } from '@resume';
---

<Section title="Skills">
  <ul class="inline-flex gap-2 flex-wrap">
    {
      skills.map(({ name }) => {
        return (
          <li class="flex items-center bg-gray-200 border border-l-zinc-200 rounded-md text-black text-sm font-medium gap-1 px-2 py-1">
            <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>
